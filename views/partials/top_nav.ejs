<!-- NEW MESSAGE MODAL -->
<div class="modal fade new-message-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content post-message">

      <form action="/message" method="POST">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h2 class="modal-title">New Geo-Message</h2>
        </div>
        <div class="modal-body">
          <div class="response display-none"></div>
          <div class="form-group">
            <label for="message-title" class="form-control-label">Message Title:</label>
            <input type="text" name="title" class="form-control" id="recipient-name">
          </div>

          <label for="message-content" class="form-control-label">Message:</label>
          <textarea class="form-control" name="content" id="message-text" rows=4></textarea>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-default post-message">Post Message</button>
        </div>
      </form>


    </div>
  </div>
</div>



