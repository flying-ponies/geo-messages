<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/top_nav') %>


    <div class="container">

      <form class="form-login">
        <div class="modal-header">
          <h2 class="form-login-heading">Sign up</h2>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" class="form-control" required autofocus>
          </div>

          <div class="form-group">
            <label for="email">Email Address:</label>
            <input type="email" id="email" name="email" class="form-control" required autofocus>
          </div>

          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Minimum 8 characters" pattern=".{8,}" class="form-control" required>
          </div>


          <label for="passwordConfirmation">Password Comfirmation:</label>
          <input type="password" id="passwordConfirmation" name="passwordConfirmation" placeholder="Minimum 8 characters" pattern=".{8,}" class="form-control" required>

        </div>
        <div class="modal-footer">
          <button class="btn btn-md btn-default btn-block" type="submit">Sign up</button>
        </div>
    </div> <!-- /container -->

    <%- include('partials/footer') %>
  </body>
</html>
