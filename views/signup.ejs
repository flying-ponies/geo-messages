<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/top_nav') %>

    <form class="form-signup" action="/signup" method="post">
      <div class="modal-header">
        <h2 class="form-signup-heading">Sign up</h2>
      </div>
      <div class="modal-body">

        <% if (errors) { %>
          <div class="alert alert-danger fade in small">
            <!-- <a href="#" class="close" data-dismiss="alert">&times;</a> -->
            <strong>The following errors prevented sign up:</strong>
            <ul>
            <% errors.forEach(function(error) { %>
              <li>
                <%= error %>
              </li>
            <% }) %>
            </ul>
          </div>
        <% } %>

        <div class="form-group">
          <label for="username">Username:</label>
          <input type="text" id="username" name="username" class="form-control" required autofocus>
        </div>
        <div class="form-group">
          <label for="email">Email Address:</label>
          <input type="email" id="email" name="email" placeholder="example@example.com" class="form-control" required autofocus>
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" placeholder="Minimum 8 characters" required title="Minimum 8 characters" pattern=".{8,}" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="passwordConfirmation">Password Comfirmation:</label>
          <input type="password" id="passwordConfirmation" name="passwordConfirmation" placeholder="Minimum 8 characters" pattern=".{8,}" required title="Minimum 8 characters" class="form-control" required>
        </div>
        <button class="btn btn-md btn-default btn-block" type="submit">Sign up</button>
      </div>
      <div class="modal-footer">
        <h6>Already have an account?</h6>
        <a href="/login" class="btn  btn-md btn-default btn-block">Log in</a>
      </div>

    <%- include('partials/footer') %>
  </body>
</html>
